<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cv_image_first_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        app:cardCornerRadius="12dp">

        <ImageView
            android:id="@+id/iv_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_first_row_image" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_second_row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@id/cv_image_first_row"
        android:text="KOR Slim-Fit Shirt"
        android:textColor="@color/black_full"
        android:textSize="@dimen/text_regular"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/tv_second_row_name"
        android:layout_below="@id/tv_second_row_name"
        android:text="$24.99"
        android:textColor="@color/secondary_text"
        android:textSize="@dimen/text_small"
        android:textStyle="normal" />


</RelativeLayout>