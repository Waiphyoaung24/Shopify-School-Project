<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_margin="8dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/img_product_list"
            android:scaleType="centerCrop"
            android:id="@+id/iv_product_image"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_product_image"
            android:text="Atoms Shirt"
            android:id="@+id/tv_proudct_name"
            android:textColor="@color/primary_text"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/bold"
            android:layout_marginLeft="14dp"
            android:textSize="@dimen/text_regular_2x"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/regular"
            android:text="$44.99"
            android:layout_marginBottom="8dp"
            android:textSize="@dimen/text_regular"
            android:textColor="@color/secondary_text"
            android:layout_below="@id/tv_proudct_name"
            android:layout_alignLeft="@id/tv_proudct_name"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>