<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_full">


            <ImageView
                android:id="@+id/iv_back_detail"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/regular"
                android:text="Product Detail"
                android:textColor="@color/black_full"
                android:textSize="18sp" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:layout_marginTop="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_product_detail" />

        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/iv_product_image"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/regular"
            android:text="Versace Hoodie with Print"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_heading_1x"

            />

        <TextView
            android:id="@+id/tv_price_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_product_name"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/regular"
            android:text="$44.99"
            android:textColor="@color/primary_text"
            android:textSize="@dimen/text_heading_1x" />

        <TextView
            android:id="@+id/tv_product_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_price_tag"
            android:layout_below="@id/tv_price_tag"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/regular"
            android:lineSpacingMultiplier="1.4"
            android:text="Lorem Ipsum is simply dummy text of the prnting and typesetting industry.Lorem Ipsum is simply dummy text of the prnting and typesetting industry.Lorem Ipsum is simply dummy text of the prnting and typesetting industry."
            android:textColor="@color/secondary_text"
            android:textSize="@dimen/text_regular"


            />

        <Button
            android:id="@+id/btn_addToCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_product_detail"
            android:layout_below="@id/tv_product_detail"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="14dp"
            android:background="@drawable/bg_button_border_add_to_cart"
            android:fontFamily="@font/regular"
            android:text="Add To Cart"
            android:textAllCaps="false"
            android:textColor="@color/black_full"


            />

        <ImageView
            android:id="@+id/iv_favorite_news"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@id/tv_product_detail"
            android:layout_toRightOf="@id/btn_addToCart"
            android:clickable="true"
            android:foreground="@drawable/bg_ripple_primary"
            android:padding="@dimen/margin_medium_2"
            android:src="@drawable/hearts" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/btn_addToCart"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="4dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_button_border"
            android:fontFamily="@font/regular"
            android:id="@+id/btn_explore"
            android:paddingLeft="64dp"
            android:paddingRight="64dp"
            android:text="Explore More"
            android:textAllCaps="false"
            android:textColor="@color/primary_text" />


    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>