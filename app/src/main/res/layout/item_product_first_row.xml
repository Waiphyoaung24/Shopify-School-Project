<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginRight="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">



        <android.support.v7.widget.CardView
            android:id="@+id/cv_image_first_row"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_firstContent"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="8dp"
            android:elevation="4dp"
            app:cardCornerRadius="12dp">

            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:src="@drawable/img_first_row_image" />

        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tv_first_content_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/cv_image_first_row"
            android:layout_below="@id/cv_image_first_row"
            android:layout_marginTop="8dp"
            android:text="Main Title"
            android:textColor="@color/black_full"
            android:textSize="@dimen/text_regular"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_first_content_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_first_content_item"
            android:layout_below="@id/tv_first_content_item"
            android:layout_marginTop="8dp"
            android:text="$44.99"
            android:textColor="@color/black_full"
            android:textSize="@dimen/text_regular" />


    </RelativeLayout>

</RelativeLayout>